# Jarvis Assistant Environment Configuration
# Copy this file to .env and update with your actual paths

# Obsidian Vault Configuration
JARVIS_VAULT_PATH="/path/to/your/obsidian/vault"
JARVIS_VAULT_WATCH=true

# External data storage (recommended: outside project directory)
JARVIS_DATABASE_PATH="/path/to/external/data/jarvis.duckdb"
JARVIS_VECTOR_DB_PATH="/path/to/external/data/jarvis-vector.duckdb"
JARVIS_VECTOR_DB_READ_ONLY=false

# Dataset generation output
JARVIS_DATASET_OUTPUT_DIR="/path/to/external/datasets"

# Logging Configuration
JARVIS_LOG_LEVEL="INFO"
JARVIS_LOG_FILE="/path/to/external/logs/mcp_server.log"

# Development/Debug Settings
JARVIS_DEBUG=false

# Graph Database (Neo4j)
JARVIS_GRAPH_ENABLED=true
JARVIS_NEO4J_URI=bolt://localhost:7687
JARVIS_NEO4J_USER=neo4j
JARVIS_NEO4J_PASSWORD=your_neo4j_password

# Embeddings
JARVIS_EMBEDDING_MODEL_NAME=paraphrase-MiniLM-L6-v2
JARVIS_EMBEDDING_DEVICE=mps  # Options: auto, cpu, cuda, mps
JARVIS_EMBEDDING_BATCH_SIZE=32

# MCP Server
JARVIS_MCP_SERVER_NAME=jarvis-assistant
JARVIS_MCP_SERVER_VERSION=0.2.0

# Indexing
JARVIS_INDEX_BATCH_SIZE=32
JARVIS_INDEX_ENQUEUE_ALL=false

# Search
JARVIS_SEARCH_DEFAULT_LIMIT=10
# Note: internal search uses distance; keep default unless you know the effect
JARVIS_SEARCH_SIMILARITY_THRESHOLD=0.7

# Optional external services
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_MODEL_ID=gemini-1.5-flash-latest
