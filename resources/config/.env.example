# Jarvis Assistant Configuration Template
# Copy this file to .env and customize the values for your setup

# Application Settings
APP_NAME=jarvis-assistant
APP_VERSION=0.2.0
DEBUG=false
LOG_LEVEL=INFO

# Vault Configuration
VAULT_PATH=/path/to/your/obsidian/vault
VAULT_WATCH=true

# Vector Database Settings (DuckDB)
VECTOR_DB_PATH=data/jarvis-vector.duckdb
VECTOR_DB_READ_ONLY=false

# Graph Database Settings (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Embedding Configuration
EMBEDDING_MODEL_NAME=paraphrase-MiniLM-L6-v2
EMBEDDING_DEVICE=mps  # Options: cpu, cuda, mps (for Apple Silicon)
EMBEDDING_BATCH_SIZE=32

# MCP Server Settings
MCP_SERVER_NAME=jarvis-assistant
MCP_SERVER_VERSION=0.2.0

# Indexing Configuration
INDEX_BATCH_SIZE=32
INDEX_ENQUEUE_ALL=false

# Search Configuration
SEARCH_DEFAULT_LIMIT=10
SEARCH_SIMILARITY_THRESHOLD=0.7

# Future Configuration (for Phase 4+)
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_MODEL_ID=gemini-pro
# FASTAPI_HOST=localhost
# FASTAPI_PORT=8000